#!/bin/bash

pushd `dirname $0` > /dev/null
SCRIPTPATH=`pwd -P`
popd > /dev/null

set -e

npm install
export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

source $SCRIPTPATH/private_env_config.sh

export PORT=9090

exec node_modules/.bin/hubot --name "sentiment-bot" $FLAGS "$@"
